generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model User {
  id     String   @id @default(uuid())
  name   String   @db.VarChar(100)
  email  String   @unique
  phone  String
  posts  Post[]

  @@map("users")
}

model Post {
  id        String   @id @default(uuid())
  title     String   @db.VarChar(100)
  content   String   
  categoria String
  nivel     String
  userId    String
  userPost  User      @relation(fields: [userId], references: [id])

  @@map("posts")
}
